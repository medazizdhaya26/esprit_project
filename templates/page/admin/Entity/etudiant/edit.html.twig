{% extends 'layout_dashboared.html.twig' %}

{% block content %}
    <div class="card mt-4">
        <div class="card-header bg-primary text-white">
            <h5>
                <i class="bx bx-edit me-2"></i> Edit Student
            </h5>
        </div>
        <div class="card-body">
            {{ form_start(edit_form) }}
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        {{ form_label(edit_form.nom, 'Nom') }}
                        {{ form_widget(edit_form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Enter Last Name'}}) }}
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        {{ form_label(edit_form.prenom, 'Prénom') }}
                        {{ form_widget(edit_form.prenom, {'attr': {'class': 'form-control', 'placeholder': 'Enter First Name'}}) }}
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        {{ form_label(edit_form.email, 'Email') }}
                        {{ form_widget(edit_form.email, {'attr': {'class': 'form-control', 'placeholder': 'example@domain.com'}}) }}
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        {{ form_label(edit_form.telephone, 'Téléphone') }}
                        {{ form_widget(edit_form.telephone, {'attr': {'class': 'form-control', 'placeholder': '+123456789'}}) }}
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        {{ form_label(edit_form.birthday, 'Date de Naissance') }}
                        {{ form_widget(edit_form.birthday, {'attr': {'class': 'form-control', 'placeholder': 'YYYY-MM-DD'}}) }}
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        {{ form_label(edit_form.password, 'password') }}
                        {{ form_widget(edit_form.password, {'attr': {'class': 'form-control', 'placeholder': 'Enter password'}}) }}
                    </div>
                </div>
            </div>
            <div class="mt-3">
                <button type="submit" class="btn btn-primary">
                    <i class="bx bx-save me-1"></i> Save Changes
                </button>
                <a href="{{ path('app_etudiant_index') }}" class="btn btn-secondary">Cancel</a>
            </div>
            {{ form_end(edit_form) }}
        </div>
    </div>
{% endblock %}
